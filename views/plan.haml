%h2 Generator planu zajęć
%form{:action => "/plan", :method => "post"}
  %fieldset
    %textarea{:name => "data"}
    
  .actions
    .radio
      %input{:type => "radio", :name => "type", :id => "type_pdfkit", :value => "pdfkit", :checked => "checked"}
      %label{:for => "type_pdfkit"} PDF
      %input{:type => "radio", :name => "type", :id => "type_html", :value => "html"}
      %label{:for => "type_html"} HTML
      %input{:type => "radio", :name => "type", :id => "type_ical", :value => "ical"}
      %label{:for => "type_ical"} iCal
      %input{:type => "radio", :name => "type", :id => "type_minipdfkit", :value => "minipdfkit"}
      %label{:for => "type_minipdfkit"} Mini PDF
      %input{:type => "radio", :name => "type", :id => "type_minihtml", :value => "minihtml"}
      %label{:for => "type_minihtml"} Mini HTML
      %input{:type => "radio", :name => "type", :id => "type_vcs", :value => "vcs"}
      %label{:for => "type_vcs"} VCS
      
      / %input{:type => "radio", :name => "type", :id => "type_pdf", :value => "pdf"}
      / %label{:for => "type_pdf"} Stary PDF
        
    %input.submit{:type => "Submit", :value => "Generuj"}
    
  .actions
    %input#plan_more.submit{:type => "button", :value => "Wprowadź dodatkowe kursy", :style => "float: left"}
    
  #pmore
    
  #examples
    %h3 Przykładowe plany
    %a{:rel => "examples", :href => "/examples/pdf.png", :title => "PDF", :class =>"first"}
      %img{:src => "/examples/pdf-thumb.png"}
    %a{:rel => "examples", :href => "/examples/ical.png", :title => "iCal"}
      %img{:src => "/examples/ical-thumb.png"}
    %a{:rel => "examples", :href => "/examples/minipdf.png", :title => "MiniPDF"}
      %img{:src => "/examples/minipdf-thumb.png"}
  
  
  #howto
    %h3 Instrukcja obsługi
    %ul
      %li 
        Wejdź na <a href="http://edukacja.pwr.wroc.pl">Edukacje.CL</a> (zaloguj się itp) (<a href="/howto/1.jpg" rel="howto" title="Logowanie">screen</a>)
      %li Kliknij zakładkę <strong>"Zapisy"</strong> (po lewej w menu) (<a href="/howto/2.jpg" rel="howto" title="Zapisy">screen</a>)
      %li 
        Teraz klik na 
        %strong "Przełącz na &lt;Grupy zajęciowe do których słuchacz jest zapisany w semestrze&gt;"
        (<a href="/howto/3.jpg" rel="howto" title="Grupy">screen</a>)
      %li 
        Skopiuj źródło strony i wklej w pole powyżej
        %ul
          %li Z menu "Widok" wybierz "Źródło strony"
          %li Z menu "Edycja" wybierz "Zaznacz wszystko"
          %li Kopiuj (Ctrl + C lub "Edycja" -> "Kopiuj")
              
    